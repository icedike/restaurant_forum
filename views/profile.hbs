<div class="container">
  <div class="row bg-white border">
    <div class="col-4">
      <img class="img-responsive center-block" style="width: 250px;" src="{{profile.image}}">
    </div>
    <div class="col-8">
      <h3>{{profile.name}}</h3>
      <p>{{profile.email}}</p>
      <p><strong>{{count}} </strong>已評論餐廳</p>
      {{#if self}}
      <a href="/users/{{profile.id}}/edit" class="btn btn-primary">Edit</a>
      {{/if}}
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <div class="card">
      <div class="card-header">
        {{count}} 已評論餐廳
      </div>
      <div class="card-body">
        {{#each data}}
        <a href="/restaurants/{{this.id}}">
          <img class="img-responsive center-block mr-3" src="{{this.image}}" style="width: 50px; height:50px">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>