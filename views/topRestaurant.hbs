<h1>美食達人</h1>
<hr />
{{#each restaurants}}
<div class="container mt-3">
  <div class="row bg-white border">
    <div class="col-4">
      <img class="img-responsive center-block" style="width: 250px;" src="{{this.image}}">
    </div>
    <div class="col-8">
      <h3>{{this.name}}</h3>
      <span class="badge badge-secondary">收藏數：{{this.FavoriteCount}}</span>
      <p>{{this.description}}</p>
      <a class="btn btn-primary mb-2" href="/restaurants/{{this.id}}">Show</a>
      {{#if this.isFavorited }}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: inline"><button type="submit"
          class="btn btn-danger mb-2">移除最愛</button></form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" style="display: inline"><button type="submit"
          class="btn btn-primary mb-2">加到最愛</button>
      </form>
      {{/if}}
    </div>
  </div>
</div>
{{/each}}